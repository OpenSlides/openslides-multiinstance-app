{{#modal-dialog close="close"}}
  <div class="modal-header">
    <button type="button" class="close" aria-label="Close" {{action 'close'}}>
      <span aria-hidden="true">Ã—</span>
    </button>

    <div class="modal-header-title-container clearfix">
      <div>
        <h3 class="modal-title" id="dialogTitle">{{t 'title-upgrade' instance=instance.domain}}</h3>
      </div>
    </div>
  </div>

  <div class="modal-body">

    {{#if versions.length}}
      {{#form-for this submit=(action 'submit') as |f|}}
        {{f.select-field "osversion" options=versions includeBlank='---' optionLabelPath="name"}}

        <p></p>
        <p>
          {{#f.submit "Save" disabled=(not osversion) class="btn btn-primary"}}{{t 'action-upgrade'}}{{/f.submit}}
          <a class="btn btn-default" {{action "close"}}>{{t 'cancel'}}</a>
        </p>
      {{/form-for}}
    {{else}}
      <div class="alert alert-info" role="alert">
        {{t 'no-upgrades-available'}}
      </div>
    {{/if}}

  </div>

{{/modal-dialog}}