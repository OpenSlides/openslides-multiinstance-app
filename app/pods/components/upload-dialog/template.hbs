{{#modal-dialog title=title close="close"
                translucentOverlay=true
                container-class="upload"
                container-class="modal-dialog"
                clickOutsideToClose=true}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}} aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-header-title-container clearfix">{{title}}
    </div>
  </div>
  <div class="modal-body">
    <div class="clearfix" style="margin:0 -10px 0 -10px;">
      {{upload-form model=model blobUploaded="blobUploaded"}}
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" {{action 'close'}}>{{t 'close'}}</button>
  </div>
{{/modal-dialog}}